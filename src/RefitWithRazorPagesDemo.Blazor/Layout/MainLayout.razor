@using System.Globalization
@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <CascadingValue Name="CurrencyCulture" Value="@_CurrencyCulture">
                <CascadingValue Name="CurrencyFormat" Value="@_CurrencyFormat">
                    @Body
                </CascadingValue>
            </CascadingValue>

        </article>
    </main>
</div>

@code
{
    CultureInfo _CurrencyCulture = new CultureInfo("de-DE");
    public string _CurrencyFormat = "C2";
}
